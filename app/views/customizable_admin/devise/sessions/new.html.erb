<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <div class="well clearfix">
      <h2>Connexion</h2>
      <hr/>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}, wrapper: :horizontal_form_wl) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :email, placeholder: t('activerecord.attributes.user.email') %>
          <%= f.input :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password') %>
          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              </div>
          <% end -%>
          <%= f.submit t('buttons.sign_in'), class: 'btn btn-block btn-primary' %>
      <% end %>
      <hr>
      <%= render "customizable_admin/partials/devise_links" %>
    </div>
  </div>
</div>
