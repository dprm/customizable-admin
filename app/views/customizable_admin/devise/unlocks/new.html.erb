<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <div class="well clearfix">
      <h2>Resend unlock instructions</h2>
      <hr/>

      <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, class: 'form-horizontal'}) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :email, placeholder: "Email", wrapper: :horizontal_wl, input_html: {autofocus: true} %>
          <%= f.submit "Resend unlock instructions", class: 'btn btn-block btn-primary' %>
      <% end %>
      <hr/>
      <%= render "customizable_admin/partials/devise_links" %>
    </div>
  </div>
</div>
