<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <div class="well clearfix">
      <h2>Cr√©ation de compte</h2>
      <hr/>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                          :html => {:class => 'form-horizontal'},
                          wrapper: :horizontal_form_wl) do |f| %>
          <%= devise_error_messages! %>
          <%= f.input :civility, collection: ['M', 'Mme', 'Melle'] %>
          <%= f.input :firstname, placeholder: t('activerecord.attributes.user.firstname') %>
          <%= f.input :lastname, placeholder: t('activerecord.attributes.user.lastname') %>
          <%= f.input :email, placeholder: t('activerecord.attributes.user.email') %>
          <%= f.input :password, autocomplete: "off", placeholder: t('activerecord.attributes.user.password') %>
          <%= f.input :password_confirmation, autocomplete: "off", placeholder: t('activerecord.attributes.user.password_confirmation') %>
          <%= f.submit t('buttons.create_account'), class: 'btn btn-block btn-primary' %>

      <% end %>
      <hr>
      <%= render "customizable_admin/partials/devise_links" %>
    </div>
  </div>
</div>
