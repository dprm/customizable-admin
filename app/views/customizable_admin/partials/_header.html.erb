<div class="navbar-top">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-top">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to(t('brand'), main_app.root_path(), class: 'navbar-brand pull-left') %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar-top">
        <ul class="nav navbar-nav navbar-left">
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if (user_signed_in?) %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                  <%= glyphicon(:user) %>
                  &nbsp;&nbsp;<%= t('header.welcome', first_name: current_user.firstname) %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to(t('header.my_account'), customizable_admin.edit_user_registration_path) %></li>
                  <li class="divider"></li>
                  <li><%= link_to(t('header.sign_out'), customizable_admin.destroy_user_session_path) %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to("Je me connecte", customizable_admin.new_user_session_path) if (controller_name != 'sessions') %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
