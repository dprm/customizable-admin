<% content_for(:pagination) do %>
    <div class="row">
      <div class="col-xs-12" align="center">
        <%= custom_paginate(@items) %>
      </div>
    </div>
<% end %>

<%= hidden_field_tag(:direction, params[:direction]) %>
<%= hidden_field_tag(:sort, params[:sort]) %>

<%= yield(:pagination) %>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed small">
    <thead>
    <tr>
      <th class="actions size-xs"></th>
      <th class="size-xs"><%= sortable('id') %></th>
      <th><%= sortable('name') %></th>
      <th><%= sortable('class_name') %></th>
    </tr>
    </thead>
    <tbody>

    <%= render(partial: 'index_child', collection: @items.roots, locals: {depth: 0}) %>

    </tbody>
  </table>
</div>
